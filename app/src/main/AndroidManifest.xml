<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="regalapp.co.regalapp" >

    <uses-permission
        android:name="android.permission.CAMERA"
        />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        />
    <uses-permission
        android:name="android.permission.INTERNET">
    </uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".regaControlador.LoginControlador"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".regaControlador.HomeControlador"
                  android:label="Home"></activity>
        <activity android:name=".regaControlador.PublicarRegaloControlador"
                   android:label="Publicar Regalo"></activity>
        <activity android:name=".regaControlador.RegistrarseControlador"
            android:label="Registrarse"></activity>
        <activity android:name=".regaControlador.RecyclerView_Activity"
            android:label="Recycler"></activity>
    </application>

</manifest>
